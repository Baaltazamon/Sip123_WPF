<Window x:Class="Sip123_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sip123_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Visibility="Visible">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="#FFEA5BEA"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="tbText" HorizontalAlignment="Left" Height="23" Margin="346,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lText" Content="Label" HorizontalAlignment="Left" Margin="339,244,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="71" Margin="28,223,0,0" VerticalAlignment="Top" Width="123" Source="wordpresslogo.gif"/>
        <ComboBox x:Name="cbNumbers" HorizontalAlignment="Left" Margin="570,315,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
        <TabControl Margin="0,0,0,210">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button HorizontalAlignment="Left" Margin="419,240,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click">
            <Label Content="Press me!"/>
        </Button>

    </Grid>
</Window>
